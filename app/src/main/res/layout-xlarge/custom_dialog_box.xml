<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_box"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/material_blue_800_new"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/material_blue_800_new"
            android:text="Select"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="5dp"
            android:src="@drawable/round_cancel"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/close_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="10dp"
            android:src="@drawable/round_cancel"
            android:visibility="visible" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">
        <Button
            android:onClick="btnChoosePathClicked"
            android:id="@+id/pdfFile"
            android:background="@drawable/button_shape"
            android:textColor="@color/Black"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:width="200dp"
            android:text="Pdf File"/>
        <Button
            android:onClick="btnChoosePathClicked"
            android:id="@+id/btnChoosePath"
            android:textColor="@color/Black"
            android:gravity="center"
            android:background="@drawable/abt_bg"
            android:layout_below="@+id/pdfFile"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:text="Photo"/>

        <Button
            android:onClick="btnTakePhotoClicked"
            android:id="@+id/btnTakePhoto"
            android:background="@drawable/abt_bg"
            android:textColor="@color/Black"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnChoosePath"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:text="Camera"/>

        <Button
            android:onClick="btnExitClicked"
            android:id="@+id/btnExit"
            android:background="@drawable/abt_bg"
            android:textColor="@color/Black"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnTakePhoto"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Cancel"/>
    </RelativeLayout>


</LinearLayout>


