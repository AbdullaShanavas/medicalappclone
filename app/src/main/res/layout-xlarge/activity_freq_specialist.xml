<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.staycured.BookmarkActitvity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_baseline_chevron_left_24"
                android:layout_marginLeft="10dp"
                android:id="@+id/imgBack"
                android:textColor="@color/material_blue_800_new"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="21dp"
                android:layout_centerInParent="true"
                android:text="Frequent Specialist"
                android:textColor="@color/Black"
                android:textStyle="bold" />



        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/edt_greybackground"
        android:weightSum="10">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_search_24"

            />
        <EditText
            android:id="@+id/txtProfile"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:textSize="21dp"
            android:gravity="left|center"
            android:textColor="@color/Black"
            android:layout_below="@+id/card_view"
            android:background="@null"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/listview"

            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_add_black_24dp"
            app:backgroundTint="@color/material_blue_800_new"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fabSize="normal"

            />


    </RelativeLayout>






</LinearLayout>