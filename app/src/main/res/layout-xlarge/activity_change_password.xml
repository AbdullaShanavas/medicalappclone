<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="1dp">


        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"

            android:src="@drawable/ic_baseline_chevron_left_24"
            />


        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="Back"
            android:textSize="21dp"
            android:layout_marginLeft="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/material_blue_800_new"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="40dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Change Password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black"
            android:textSize="21dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"



        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Old Password"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black"
            android:textSize="21dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <EditText
                android:id="@+id/edt_oldpswd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/editext_background"
                android:hint="Enter Old Password"
                android:layout_marginLeft="10dp"
                android:inputType="textPassword"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:textSize="21dp"
                android:layout_weight="0.4"
                android:singleLine="true"



                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:id="@+id/img_show_pswd1"
                android:gravity="center"
                android:src="@drawable/hideicon"
                android:onClick="ShowHidePass1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/material_blue_800_new"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                tools:ignore="OnClick" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter New Password"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black"
            android:layout_marginBottom="5dp"


            android:textSize="21dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txtpwd"

            >
            <EditText
                android:id="@+id/edt_newpswd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/editext_background"
                android:hint="Enter New Password"
                android:inputType="textPassword"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"

                android:padding="5dp"
                android:textSize="21dp"
                android:layout_weight="0.4"
                android:singleLine="true"



                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:text="show"
                android:id="@+id/img_show_pswd2"
                android:gravity="center"
                android:src="@drawable/hideicon"
                android:onClick="ShowHidePass2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/material_blue_800_new"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                tools:ignore="OnClick" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Re-Enter New Password"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black"
            android:layout_marginBottom="5dp"
            android:textSize="21dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/txtpwd"

            >
            <EditText
                android:id="@+id/edt_repswd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/editext_background"
                android:hint="Re-Enter New Password"
                android:layout_marginLeft="10dp"
                android:inputType="textPassword"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="21dp"
                android:layout_weight="0.4"
                android:singleLine="true"



                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:text="show"
                android:id="@+id/img_show_pswd3"
                android:gravity="center"
                android:src="@drawable/hideicon"
                android:onClick="ShowHidePass3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/material_blue_800_new"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                tools:ignore="OnClick" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:padding="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="21dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/button_shape"
        android:text="Save"
        tools:ignore="HardcodedText" />



</LinearLayout>