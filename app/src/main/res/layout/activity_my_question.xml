<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.staycured.MyQuestionActivity">

    <LinearLayout
        android:id="@+id/lnrlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_chevron_left_24" />

                <TextView
                    android:id="@+id/txtBack"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="Back"
                    android:visibility="gone"
                    android:textColor="@color/material_blue_800_new"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="Ask New Questions"
                android:textColor="@color/Black"
                android:textSize="15dp"

                android:textStyle="bold" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnrlyt"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/material_blue_800_new">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:text="My Question"
                android:textColor="@color/white"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="What is your Question"
                android:textColor="@color/Black"
                android:textSize="14dp"

                />

            <EditText
                android:id="@+id/edtQuestion"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_plain_bg"
                android:textSize="14dp" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_shape"
        android:text="Select specialty"
        android:id="@+id/btnSpecialty"
        android:textColor="@color/white"
        android:textStyle="bold"

        android:textSize="14dp"


        />
</RelativeLayout>